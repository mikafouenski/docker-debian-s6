#!/usr/bin/with-contenv sh

PUID=${PUID:-2000}
GUID=${GUID:-2000}

groupmod -o -g "$GUID" appuser
usermod -o -u "$PUID" appuser

chown -R appuser:appuser /config
chown -R appuser:appuser /defaults

echo "
-------------------------------------
User uid:        $(id -u appuser)
User gid:        $(id -g appuser)
-------------------------------------
"
